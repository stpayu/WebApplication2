@{
}
@model WebApplication2.Models.Flight

<h2>Flight Search Results</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Price Per Night</th>
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.Airline</td>
                <td>@flight.FlightNumber</td>
                <td>@flight.Origin</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime</td>
                <td>@flight.ArrivalTime</td>
                <td>@flight.FlightDurationMin</td>
                <td>@flight.Price</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = flight.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = flight.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = flight.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}